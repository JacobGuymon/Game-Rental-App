<Window x:Class="GameRentalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameRentalApp"
        mc:Ignorable="d"
        Title="Toads and Tricycle Game Rental System" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="641*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="116*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="308*"/>
        </Grid.RowDefinitions>
        <TabControl Margin="0,0,33,0" Grid.RowSpan="5" Grid.ColumnSpan="2">
            <TabItem Header="Game Lookup">
                <TextBox Name="Game Name"></TextBox>
            </TabItem>
            <TabItem Header="Check-In/Check-Out"></TabItem>
            <TabItem Header="Add/Delete Game" />
            <TabItem Header="Update Game Info" />
            <TabItem Header="Customer Lookup"></TabItem>

        </TabControl>

    </Grid>
</Window>
